<%- include layouts/header.ejs %>

<head>
    <script type="text/javascript"  src="/js/defects.js"></script>
    <link rel="stylesheet" type="text/css" href="/defects.css">
</head>


<div id="defects-main">
    <div id="d-fields" style="float:left; width:15%">

        <table border="1">
            <tr><!-- Row 2 -->
                <td>Id</td>
                <td><input type="text" id="d-id" disabled="true"></td>
            </tr>
            <tr><!-- Row 2 -->
                <td>Status</td>
                <td><select type="text" id="d-status"/></td>
            </tr>
            <tr><!-- Row 3 -->
                <td>Severity</td>
                <td><select type="text" id="d-severity"/></td>
            </tr>
            <tr><!-- Row 4 -->
                <td>Priority</td>
                <td>
                    <select type="text" id="d-priority">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                    </select>
                </td>
            </tr>
            <tr><!-- Row 5 -->
                <td>Reporter</td>
                <td><input type="text" id="d-reporter" disabled="true"></td>
            </tr>
            <tr><!-- Row 6 -->
                <td>Developer</td>
                <td><select type="text" id="d-developer"/></td>
            </tr>
            <tr><!-- Row 6 -->
                <td>Type</td>
                <td><select type="text" id="d-type"/></td>
            </tr>
            <tr><!-- Row 6 -->
                <td>Feature</td>
                <td><select type="text" id="d-feature"/></td>
            </tr>
            <tr><!-- Row 7 -->
                <td>Build Found</td>
                <td><input type="text" id="d-build-found"></td>
            </tr>
            <tr><!-- Row 8 -->
                <td>Build Fixed</td>
                <td><input type="text" id="d-build-fixed"></td>
            </tr>
        </table>

        <input type="button" id="clear" value="Clear">
        <input type="button" id="submit" value="Submit">

    </div>
    <div style="float:right; width:84%;">
        <div class="panel panel-primary filterable">
            <table class="table" id="d-list">
                <thead class="fixed-header">
                <tr >
                    <th style="width: 3%;">Id</th>
                    <th style="width: 50%;">Summary</th>
                    <th style="width: 5%;">Status</th>
                    <th style="width: 5%;">Severity</th>
                    <th style="width: 4%;">Priority</th>
                    <th style="width: 7%;">Reporter</th>
                    <th style="width: 7%;">Developer</th>
                    <th style="width: 4%;">d in</th>
                    <th style="width: 4%;">f in</th>
                    <th style="width: 6%;">Type</th>
                    <th style="width: 6%;">Feature</th>
                </tr>
                <tr class="filters">
                    <th style="width: 3%;"><input style="width: 100%;" type="text" class="form-control" name="d-t-id" placeholder="id"></th>
                    <th style="width: 50%;"><input style="width: 100%;" type="text" name="d-t-summary" placeholder="summary" ></th>
                    <th style="width: 5%;"><input style="width: 100%;" type="text" name="d-t-status" placeholder="status" ></th>
                    <th style="width: 5%;"><input style="width: 100%;" type="text" name="d-t-severity" placeholder="severity" ></th>
                    <th style="width: 4%;"><input style="width: 100%;" type="text" name="d-t-priority" placeholder="priority" ></th>
                    <th style="width: 7%;"><input style="width: 100%;" type="text" name="d-t-reporter" placeholder="reporter" ></th>
                    <th style="width: 7%;"><input style="width: 100%;" type="text" name="d-t-developer" placeholder="developer" ></th>
                    <th style="width: 4%;"><input style="width: 100%;" type="text" name="d-t-build-found" placeholder="found in" ></th>
                    <th style="width: 4%;"><input style="width: 100%;" type="text" name="d-t-build-fixed" placeholder="fixed in" ></th>
                    <th style="width: 6%;"><input style="width: 100%;" type="text" name="d-t-type" placeholder="type" ></th>
                    <th style="width: 6%;"><input style="width: 100%;" type="text" name="d-t-feature" placeholder="feature" ></th>
                </tr>
                </thead>
                <tbody  id="scroll" class="scroll-content">

                </tbody>
            </table>
        </div>
    </div>
    <div>
        <div style="float:right; width:84%;">
            Summary<br>
            <input type="text" id="d-summary" style="width:100%"/>
        </div>
    </div>
    <div>
        <div style="float:right; width:41%;">
            Comments<br>
            <textarea id="d-comments" rows="7" class="defects"></textarea><br>
        </div>
        <div style="float:right; width:2%;">&nbsp</div>
        <div style="float:right; width:41%;">
        Description<br>
        <textarea id="d-description" rows="7" class="defects"></textarea><br>
        </div>

    </div>
</div>

</body>

<script>
    window.onload = function() {
        defects();
    }
</script>
</html>